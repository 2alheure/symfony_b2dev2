{% extends "base.html.twig" %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	{% for key, array in app.flashes %}
		{% for message in array %}
			<p>
				<strong>{{ key|upper }}</strong>
				:
				{{ message }}</p>
		{% endfor %}
	{% endfor %}

	<div class="container mx-auto grid grid-cols-3 gap-8">
			{% for a in articles %}
				<p class="border rounded shadow-lg p-4">#{{ a.id }}
					:
					{{ a.titre }}</p>
			{% endfor %}
	</div>
{% endblock %}
